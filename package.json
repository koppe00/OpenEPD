{
  "name": "open-epd-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start-ehr": "docker-compose -f infrastructure/ehrbase/docker-compose.yml up -d",
    "projection:test": "ts-node -r dotenv/config packages/projection-service/project-vitals.ts",
    "agent:triage": "ts-node -r dotenv/config packages/agent-services/triage-agent.ts",
    "dev:provider": "pnpm dev --filter provider-dashboard",
    "dev:patient": "pnpm dev --filter patient-portal"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "autoprefixer": "10.4.19",
    "postcss": "8.4.31",
    "tailwindcss": "3.4.4",
    "ts-node": "^10",
    "turbo": "latest",
    "typescript": "^5"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.2",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.18.0"
  }
}
